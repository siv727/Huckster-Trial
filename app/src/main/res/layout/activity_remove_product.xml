<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_yellow"
    android:padding="20dp">

    <ImageView
        android:id="@+id/back_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/remove_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_settings"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp"
        android:text="Remove Products"
        android:textSize="24sp"
        android:textColor="@color/trade_blue"
        android:fontFamily="@font/montserrat_semi_bold" />

    <ListView
        android:id="@+id/remove_product_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/remove_title"
        android:layout_above="@+id/remove_selected_btn"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp" />

    <Button
        android:id="@+id/remove_selected_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Selected"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/trade_blue"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>
</RelativeLayout>
