<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_yellow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tempProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_list"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/trade_blue"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/back_settings"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:id="@+id/add_something"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Something"
        android:textSize="18sp"
        android:textColor="@color/trade_blue"
        android:fontFamily="@font/rdh_semi_bold"
        android:layout_marginBottom="20dp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/tempProd"
        android:layout_marginHorizontal="30dp"
        />


    <ListView
        android:id="@+id/productlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/add_something"/>
</RelativeLayout>
