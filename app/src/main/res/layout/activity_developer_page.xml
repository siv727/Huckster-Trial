<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/back_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Developers"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/trade_blue"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet our Team\!"
            android:textSize="18dp"
            android:textColor="@color/trade_blue_50percent"
            android:fontFamily="@font/rdh_semi_bold"
            android:layout_marginBottom="20dp"

            />

        <!-- Ervin Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="24dp"
            android:background="@drawable/dialog_background"

            android:layout_marginBottom="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/developer_ervin"
                    android:background="@drawable/rounded_image"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:layout_marginEnd="8dp"
                    android:elevation="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semi_bold"
                android:padding="8dp"
                android:text="@string/ervin_name"
                android:textColor="@color/trade_blue"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ervin_intro"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="@font/rdh_semi_bold"
                android:padding="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact at:"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/rdh_semi_bold"
                android:padding="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ervin_contact"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/rdh_semi_bold"
                android:paddingStart="25dp" />
        </LinearLayout>

        <!-- Hector Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/color_gradient_button_2"
            android:paddingVertical="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/developer_hector"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"
                    android:elevation="20dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="John Hector P. Villarta"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:fontFamily="@font/rdh_semi_bold"
                android:padding="20dp"
                android:text="A passionate Android developer with a love for clean and efficient code. Specializes in UI/UX and backend optimization."
                android:textAlignment="center"
                android:textStyle=""
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact at:"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/rdh_semi_bold"
                android:padding="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="johnhector.villarta@cit.edu\n+63-xxx-xxxx-xxx\noutlook"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/rdh_semi_bold"
                android:paddingStart="25dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
