<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/welcome_yellow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <ImageSwitcher
        android:id="@+id/change_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/rdh_semi_bold"
                android:text="@string/firstname"
                android:textColor="@color/trade_blue_50percent"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/change_firstname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="14dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/inner_shadow"
                android:inputType="textEmailAddress"
                android:labelFor="@id/edittext_email" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/rdh_semi_bold"
                android:text="@string/lastname"
                android:textColor="@color/trade_blue_50percent"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/change_lastname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="14dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/inner_shadow"
                android:inputType="textEmailAddress"
                android:labelFor="@id/edittext_email" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textview_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:text="@string/email"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/change_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:padding="14dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/inner_shadow"
        android:inputType="textEmailAddress"
        android:labelFor="@id/edittext_email" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="120dp"
        android:background="@drawable/color_gradient_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/call_to_action"
        android:textAllCaps="false"
        android:textColor="@color/trade_blue"
        android:textSize="20sp" />

</LinearLayout>