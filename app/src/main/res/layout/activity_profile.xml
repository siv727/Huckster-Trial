<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/welcome_yellow"
    android:orientation="vertical">

    <!-- Back Button: Align it similarly to the developer layout -->
    <ImageView
        android:id="@+id/back_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    android:src="@drawable/baseline_arrow_back_24"
    android:layout_gravity="start"/>

    <ImageSwitcher
        android:id="@+id/change_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:text="@string/firstname"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/change_firstname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:padding="14dp"
        android:autofillHints="name"
        android:background="@drawable/inner_shadow"
        android:inputType="text"
        android:labelFor="@id/edittext_firstname"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="12sp"
        android:paddingHorizontal="2sp"
        android:textColor="@color/trade_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:text="@string/lastname"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/change_lastname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:padding="14dp"
        android:autofillHints="name"
        android:background="@drawable/inner_shadow"
        android:inputType="text"
        android:labelFor="@id/edittext_lastname"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="12sp"
        android:paddingHorizontal="2sp"
        android:textColor="@color/trade_blue"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/color_gradient_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/trade_blue"
        android:textSize="20sp" />

</LinearLayout>
