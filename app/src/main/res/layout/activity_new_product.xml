<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/welcome_yellow"
    tools:context=".NewProductActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Title -->
    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Product"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/trade_blue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp" />

    <!-- Product Name Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- Product Name Input -->
    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:background="@drawable/inner_shadow"
        android:textSize="12sp"
        android:textColor="@color/trade_blue"
        android:fontFamily="@font/montserrat_semi_bold"
        android:hint="Product Name"
        android:inputType="text"
        android:layout_marginBottom="10dp" />

    <!-- Category Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- Category Spinner -->
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="5dp"
        android:background="@drawable/inner_shadow"
        android:layout_marginBottom="10dp" />

    <!-- Price Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- Price Input -->
    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:background="@drawable/inner_shadow"
        android:textSize="12sp"
        android:textColor="@color/trade_blue"
        android:fontFamily="@font/montserrat_semi_bold"
        android:inputType="text"
        android:hint="Price"
        android:layout_marginBottom="10dp" />

    <!-- Stocks Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stocks"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- Stock Input -->
    <EditText
        android:id="@+id/stock_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        android:background="@drawable/inner_shadow"
        android:textSize="12sp"
        android:textColor="@color/trade_blue"
        android:fontFamily="@font/montserrat_semi_bold"
        android:hint="Stocks"
        android:inputType="text"
        android:layout_marginBottom="10dp" />

    <!-- Unit Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- Unit Spinner -->
    <Spinner
        android:id="@+id/unit_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="5dp"
        android:background="@drawable/inner_shadow"
        android:layout_marginBottom="10dp" />

    <!-- Add Product Button -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/color_gradient_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Add Product"
        android:textAllCaps="false"
        android:textColor="@color/trade_blue"
        android:textSize="20sp" />

</LinearLayout>
