<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".NewProductActivity"
    android:background="@color/welcome_yellow">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Title -->
    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Product"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/trade_blue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"/>

    <!-- Product Name Input -->
    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/inner_shadow"
        android:textSize="12sp"
        android:textColor="@color/trade_blue"
        android:fontFamily="@font/montserrat_semi_bold"
        android:hint="Product Name"
        android:inputType="text"
        android:layout_marginBottom="20dp"/>

    <!-- Category & Price Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingHorizontal="14dp"
            android:background="@drawable/inner_shadow"
            android:textSize="12sp"
            android:textColor="@color/trade_blue"
            android:fontFamily="@font/montserrat_semi_bold"
            android:inputType="text"
            android:hint="Category"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingHorizontal="14dp"
            android:background="@drawable/inner_shadow"
            android:textSize="12sp"
            android:textColor="@color/trade_blue"
            android:fontFamily="@font/montserrat_semi_bold"
            android:hint="Price"
            android:inputType="text"/>
    </LinearLayout>

    <!-- Stock Count & Unit Spinner Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/stock_count"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingHorizontal="14dp"
            android:background="@drawable/inner_shadow"
            android:textSize="12sp"
            android:textColor="@color/trade_blue"
            android:fontFamily="@font/montserrat_semi_bold"
            android:hint="Stocks"
            android:inputType="text"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <Spinner
            android:id="@+id/unit_spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/inner_shadow"/>
    </LinearLayout>

    <!-- Add Product Button -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/color_gradient_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Add Product"
        android:textAllCaps="false"
        android:textColor="@color/trade_blue"
        android:textSize="20sp"/>
</LinearLayout>
