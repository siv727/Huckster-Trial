<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_yellow"
    android:orientation="vertical"
    tools:context=".ChangePasswordActivity">

    <!-- Back Button: Ensured proper alignment at the top left -->
    <ImageView
        android:id="@+id/back_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Title Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/change_password"
        android:textColor="@color/trade_blue"
        android:textSize="22sp" />

    <!-- Current Password Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:text="@string/current_password"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- Current Password Input -->
    <EditText
        android:id="@+id/edittext_current_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/inner_shadow"
        android:fontFamily="@font/montserrat_semi_bold"
        android:hint="@string/space"
        android:inputType="textPassword"
        android:padding="14dp"
        android:paddingHorizontal="2sp"
        android:textColor="@color/trade_blue"
        android:textSize="12sp" />

    <!-- New Password Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:text="@string/new_password"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- New Password Input -->
    <EditText
        android:id="@+id/edittext_new_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/inner_shadow"
        android:fontFamily="@font/montserrat_semi_bold"
        android:hint="@string/space"
        android:inputType="textPassword"
        android:padding="14dp"
        android:paddingHorizontal="2sp"
        android:textColor="@color/trade_blue"
        android:textSize="12sp" />

    <!-- Confirm New Password Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rdh_semi_bold"
        android:text="@string/confirm_new_password"
        android:textColor="@color/trade_blue_50percent"
        android:textSize="12sp" />

    <!-- Confirm New Password Input -->
    <EditText
        android:id="@+id/edittext_confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/inner_shadow"
        android:fontFamily="@font/montserrat_semi_bold"
        android:hint="@string/space"
        android:inputType="textPassword"
        android:padding="14dp"
        android:paddingHorizontal="2sp"
        android:textColor="@color/trade_blue"
        android:textSize="12sp" />

    <!-- Change Password Button -->
    <Button
        android:id="@+id/button_change_password"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/color_gradient_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/change_password"
        android:textAllCaps="false"
        android:textColor="@color/trade_blue"
        android:textSize="20sp" />

</LinearLayout>
