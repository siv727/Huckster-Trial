<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/welcome_yellow"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="start" />

        <!-- Header Section: About Huckster -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Huckster"
            android:textColor="@color/trade_blue"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_background"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginVertical="20dp">

            <!-- Huckster Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/huckster"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center" />

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/trade_blue"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="16dp"
                android:gravity="center" />

            <!-- About Huckster Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:textColor="@color/trade_blue"
                android:textSize="20sp"
                android:fontFamily="@font/rdh_semi_bold"
                android:layout_marginTop="12dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
