<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/welcome_yellow">

    <ImageView
        android:id="@+id/back_login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/huckster"
        android:layout_alignParentEnd="true"/>

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_bg"
        android:clipToOutline="true"
        android:layout_marginTop="50dp"
        android:autoStart="true"
        android:flipInterval="3000">

        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:src="@drawable/stats" />

        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:src="@drawable/sales" />

        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:src="@drawable/product" />
    </ViewFlipper>

    <LinearLayout
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewFlipper"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <!--Here we can add like Hello [First name] para personalized-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/rdh_semi_bold"
            android:textColor="@color/trade_blue"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:text="@string/todo"
            android:textSize="14sp"
            android:fontFamily="@font/rdh_semi_bold"
            android:textColor="@color/trade_blue"
            android:textStyle="bold"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_add"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/welcome"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/add"
        android:textSize="13sp"/>

    <Button
        android:id="@+id/button_remove"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/button_add"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bg2"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/remove"
        android:textSize="13sp"/>

    <LinearLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#80FFFFFF"
        android:orientation="horizontal"
        android:elevation="8dp">

        <!-- Home Button -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_home"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Products Button -->
        <LinearLayout
            android:id="@+id/nav_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/list_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_products"
                android:textSize="11sp" />
        </LinearLayout>

        <!--  Notification Button -->
        <LinearLayout
            android:id="@+id/nav_notif"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notification_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_notif"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Profile Button -->
        <LinearLayout
            android:id="@+id/nav_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_acc"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>